@page
@model KetabeKhoob.Razor.Pages.Profile.EditModel
@{
    ViewData["title"] = "ویرایش پروفایل کاربر";
}
<div class="row mb-5">
    <partial name="Shared/Profile/ProfileSidebar" />
    <div class="col-lg-9 col-md-8">
        <div class="row mb-4">
            <div class="col-12">
                <div class="section-title mb-2">
                    @ViewData["title"]
                </div>
                <section class="shadow-around p-3">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(x => x.Name)
                            </div>
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(x => x.Family)
                            </div>
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(x => x.PhoneNumber)
                            </div><div class="col-lg-6 mb-5">
                                @Html.EditorFor(x => x.Email)
                            </div>
                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(x => x.Gender)
                            </div>
                            <div class="col-lg-6 align-items-center">
                                @Html.EditorFor(x => x.Avatar)
                            </div>
                            <div class="col-12">
                                <div class="form-element-row text-left">
                                    <button class="btn-element btn-success-element">
                                        <i class="fad fa-user-edit"></i>
                                        ذخیره تغییرات
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Script
{
    <script src="~/global/clientValidation.js"></script>
}
