@page "{id:long}"
@using KetabeKhoob.Razor.Infrastructure
@model KetabeKhoob.Razor.Pages.Admin.Sliders.EditModel
@{
    ViewData["Title"] = "ویرایش اسلایدر";
}

<form method="post" class="card card-body" enctype="multipart/form-data">
    @Html.HiddenFor(x => x.ImageName)
    <div class="row">
        <div class="col-md-6">
            @Html.EditorFor(x => x.Title)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(x => x.Link)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(x => x.Position)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(x => x.ImageFile)
        </div>
        <div class="col-md-12">
            <img src="@Directories.GetSliderImage(Model.ImageName)" alt="@Model.Title" style="width: 100%; height: 300px"/>
        </div>
    </div>
    <div class="card-footer text-left">
        <button type="submit" class="btn btn-success">ثبت اطلاعات</button>
    </div>
</form>
