@model KetabeKhoob.Razor.Models.Banners.EditBannerCommand

<form method="post" data-ajax="true" asp-page="Index" asp-page-handler="EditBanner" enctype="multipart/form-data">
    <div class="row">
        @Html.HiddenFor(x => x.Id)
        <div class="col-md-6">
            @Html.EditorFor(x => x.Link)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(x => x.Position)
        </div>
        <div class="col-md-12">
            @Html.EditorFor(x => x.ImageFile)
        </div>
    </div>
    <button type="submit" class="btn btn-primary">
        ذخیره تغییرات
    </button>
</form>

